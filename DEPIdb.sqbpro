ndex="1" value="66"/><column index="2" value="78"/><column index="3" value="109"/></column_widths><filter_values/><conditional_formats/><row_id_formats/><display_formats/><hidden_columns/><plot_y_axes/><global_filter/></table></browse_table_settings></tab_browse><tab_sql><sql name="SQL 1">--to return the subject in which each student outperforms all their other subjects
SELECT student_id, subject_title, avg_score
FROM (
    SELECT 
        student_id,
        subject_title,
        AVG(score_value) AS avg_score,
        RANK() OVER (PARTITION BY student_id ORDER BY AVG(score_value) DESC) AS rnk
    FROM Assessments_Table
    GROUP BY student_id, subject_title
)
WHERE rnk = 1;



--Return the most 5 hardworking instructors in the school 
SELECT 
    instructor_name,
    COUNT(*) AS total_assessments
FROM Assessments_Table
GROUP BY instructor_name
ORDER BY total_assessments DESC
LIMIT 5;


--The top 10 students in the last week’s assessment
SELECT *
FROM Assessments_Table
WHERE evaluation_date = (
    SELECT MAX(evaluation_date) FROM Assessments_Table
)
ORDER BY score_value DESC
LIMIT 10;



--Always Passing Students (No fail ever)
SELECT student_id
FROM Assessments_Table
GROUP BY student_id
HAVING COUNT(CASE WHEN status_pass_fail = 'Fail' THEN 1 END) = 0;





--The top 5 students with the most improvement over time
WITH t AS (
    SELECT 
        student_id,
        FIRST_VALUE(score_value) OVER (PARTITION BY student_id ORDER BY evaluation_date) AS first_score,
        LAST_VALUE(score_value) OVER (PARTITION BY student_id ORDER BY evaluation_date 
            RANGE BETWEEN UNBOUNDED PRECEDING AND UNBOUNDED FOLLOWING) AS last_score
    FROM Assessments_Table
)
SELECT DISTINCT student_id, (last_score - first_score) AS improvement
FROM t
ORDER BY improvement DESC
LIMIT 5;




--List the 5 teachers whose students perform better than those of other teachers
SELECT instructor_name, AVG(score_value) AS avg_score
FROM Assessments_Table
GROUP BY instructor_name
ORDER BY avg_score DESC
LIMIT 5;



-- subject that has Highest Fail Rate
SELECT 
    subject_title,
    ROUND(100.0 * SUM(CASE WHEN status_pass_fail = 'Fail' THEN 1 ELSE 0 END) / COUNT(*), 2) AS fail_rate
FROM Assessments_Table
GROUP BY subject_title
ORDER BY fail_rate DESC
LIMIT 1;






WITH ranked AS (
    SELECT
        student_id,
        score_value,
        ROW_NUMBER() OVER (PARTITION BY student_id ORDER BY evaluation_date) AS rn_asc,
        ROW_NUMBER() OVER (PARTITION BY student_id ORDER BY evaluation_date DESC) AS rn_desc
    FROM Assessments_Table
),
first_three AS (
    SELECT student_id, AVG(score_value) AS avg_first3
    FROM ranked
    WHERE rn_asc &lt;= 3
    GROUP BY student_id
),
last_three AS (
    SELECT student_id, AVG(score_value) AS avg_last3           
    FROM ranked                                            --Show whether the student’s performance is declining or increasing over time
    WHERE rn_desc &lt;= 3
    GROUP BY student_id
)
SELECT 
    f.student_id,
    CASE
        WHEN l.avg_last3 &gt; f.avg_first3 THEN 'Increasing'
        WHEN l.avg_last3 &lt; f.avg_first3 THEN 'Decreasing'
        ELSE 'Stable'
    END AS trend,
    f.avg_first3,
    l.avg_last3
FROM first_three f
JOIN last_three l ON f.student_id = l.student_id;
